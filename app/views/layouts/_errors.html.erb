<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2 class="alert-heading">
      <%= pluralize(obj.errors.count, "個のエラー") %> が発生しました！<button type="button" class="close" data-dismiss="alert">  &times;</button>
    </h2>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= t(message) %></li>
      <% end %>
    </ul>
  </div>
<% end %>
