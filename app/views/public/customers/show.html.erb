<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>マイページ</h3>
      <strong>登録情報</strong>
      <%= link_to "編集する", edit_current_customer_customers_path, class: "btn btn-success" %>
      <table class="table">
        <tbody>
          <tr>
            <td class="table-success">氏名</td>
            <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-success">フリガナ</td>
            <td><%= current_customer.kana_last_name %> <%= current_customer.kana_first_name %></td>
          </tr>
          <tr>
            <td class="table-success">郵便番号</td>
            <td><%= current_customer.post_code %></td>
          </tr>
          <tr>
            <td class="table-success">住所</td>
            <td><%= current_customer.address %></td>
          </tr>
          <tr>
            <td class="table-success">電話番号</td>
            <td><%= current_customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="table-success">メールアドレス</td>
            <td><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>
      <table>
        <tbody>
          <tr>
            <th style="width: 40%">配送先</th>
            <th style="width: 60%"><%= link_to "一覧を見る", addresses_path, class: "btn btn-success" %></th>
          </tr>
          <tr>
            <th style="width: 40%">注文履歴</th>
            <th style="width: 60%"><%= link_to "一覧を見る", orders_path, class: "btn btn-success" %></th>
          </tr>
        </tbody>
      </table>

    <div class="col-md-auto"></div>

  </div>
</div>