<div class="container-fuild">
  <div class="row">
    <div class="col">
      <h2 class="ml-5 mt-5 mb-3">注文履歴詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <div class="ml-5 mb-2">
      <strong>注文情報</strong>
      </div>
    </div>
    <div class="col-4">
      <div class="mb-2">
        <strong>請求情報</strong>
      </div>
    </div>
    <div class="col-6">
      <div class="ml-5">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <th class="table-green table-th">注文日</th>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <th class="table-green table-th" style="vertical-align: middle;">配送先</th>
              <td>
                〒<%= @order.post_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="table-green table-th">支払方法</th>
              <td><%= @order.payment_i18n %></td>
            </tr>
            <tr>
              <th class="table-green table-th">ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-4">
      <table class="table table-bordered border-dark">
        <tr>
          <th class="table-green">商品合計</th>
          <td><%= (@order.total_price - @order.postage).to_s%></td>
        </tr>
        <tr>
          <th class="table-green">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="table-green"><strong>ご請求額</strong></th>
          <td><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
    <div class="col-7 ml-5">
      <h4>注文内容</h4>
      <table class="table table-bordered border-dark">
        <thead class="table-green">
          <tr class="text-nowrap">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
         <% @order.ordered_items.each do |ordered_item| %>
           <tr class="text-nowrap">
             <td><%= ordered_item.item.name %></td>
             <td><%= ordered_item.purchase_price %></td>
             <td><%= ordered_item.quantity %></td>
             <td><%= (ordered_item.quantity*(ordered_item.item.price*1.08)).floor %></td>
           </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

