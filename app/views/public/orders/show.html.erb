<h2>注文履歴詳細</h2>
<h4>注文情報</h4>
 <div class='col-3'>
        <table class="table table-bordered border-dark">
            <tr><th class="table-secondary">注文日</th><td><%= @order.created_at %></td></tr>
            <tr><th class="table-secondary">配送先</th>
             <td><%= @order.post_code %>
                <%= @order.address %>
                <%= @order.name %></td>
            </tr>
            <tr><th class="table-secondary">支払方法</th><td><%= @order.payment %></td></tr>
            <tr><th class="table-secondary">ステータス</th><td><%= @order.status %></td></tr>
        </table>
  </div>
<h4>注文内容</h4>
  <div class="row">
  <div class="col-3">
    <table class="table table-borderless">
        <thead class="table-green">
          <tr class="text-nowrap">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
    <tbody>
       <% @order.ordered_items.each do |ordered_item| %>
       <tr class="text-nowrap">
         <td><%= ordered_item.item.name %></td>
         <td><%= ordered_item.purchase_price %></td>
         <td><%= ordered_item.quantity %></td>
         <td><%= (ordered_item.quantity*(ordered_item.item.price*1.08)).floor %></td>
       </tr>
       <% end %>
    </tbody>
  </table>
    </div>
  </div>
</div>
  
  <h4>請求情報</h4>
<div class='col-3'>
            <table class="table table-bordered border-dark">
                <tr><th class="table-secondary">商品合計</th><td><%= (@order.total_price - @order.postage).to_s%> 円</td>
                <tr><th class="table-secondary">配送料</th><td><%= @order.postage %></td></tr>
                <tr><th class="table-secondary">ご請求額</th><td><%= @order.total_price %></td></tr>
            </table>
  </div>