
<div class="container">

  <div class="row">
    <div class="col">
      <h2>注文履歴一覧</h2>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td>
          <% order.ordered_items.each do |order_item| %>
          <%= order_item.item.name %>
          <% end %>
        </td>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td><%= link_to '表示する', order_path(order.id)%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
    </div>
  </div>
</div>
