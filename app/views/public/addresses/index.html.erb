<h1>配送先登録／一覧</h1>
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @address do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :post_code %>

  <h4>配送先住所</h4>
  <%= f.text_area :address %>

  <h4>宛名</h4>
  <%= f.text_area :name %>

  <%= f.submit '配送先登録' %>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8 offset-md-1">
      <h2>配送先一覧</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
          <td>
            <%= address.post_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), class: "btn btn-success", method: :delete,"data-confirm" => "本当に削除しますか？" %>
          </tr>
        <% end %>
      </tbody>

