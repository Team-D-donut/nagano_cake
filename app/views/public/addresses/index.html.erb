<h1>配送先登録／一覧</h1>
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="form-group">
    <%= form_with model: @address do |f| %>
  <div class="field">
    <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code %>
  </div>
  <div class="field">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </div>
  <div class="field">
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>
  </div>
  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>
</div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @customer.each do |address| %>
          <tr>
          <td>
            <%= address.post_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          </td>
          <td>
          <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
          </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>

