    <div class="col-7">
      <div class="outer position-relative" style="width: 100%;">
        <%= image_tag  "kanban.png", size: 'autoxauto' %>

        <div class="position-absolute heading">
          <strong>
          <h2>ようこそ、ながのCAKEへ！</h2><br>
          <p>
