          <% @items.each do |item| %>
            <div class="item-box mr-5 pt-1" style="width: 160px;">
              <%= link_to(item, class:"item") do %>
                <%= image_tag item.image, class: "rounded-circle shadow border border-brown", size: '160x120'%>
              <% end %>
              <p class="mt-3 mb-0" > <%= item.name %></p>
              <p>￥<%= item.price %>(税抜)</p>
            </div>
          <% end %>
        </div>
        <div class="d-flex flex-row-reverse mb-4" style="width: auto;">
          <strong><%= link_to "→全ての商品を見る", items_path , class: "mr-5 underline"%></strong>
        </div>
      </div>
    </div>
    <div class="col-2"></div>
