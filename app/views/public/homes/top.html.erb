<%= render 'layouts/flash' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <div class="pt-5 pl-5">
        <!--<nav class="nav flex-column bg-green" style="width: 200px;">-->
        <!--  <a>ケーキ</a>-->
        <!--  <a>焼き菓子</a>-->
        <!--  <a>プリン</a>-->
        <!--  <a>キャンディ</a>-->
        <!--</nav>-->
      </div>
    </div>
    <div class="col-9">
      <div class="outer position-relative">
        <%= image_tag  "kanban.png", size: '900x560' %>
        <div class="position-absolute heading">
          <strong>
          <h2>ようこそ、ながのCAKEへ！</h2><br>
          <p>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。
          </p></strong>
        </div>
      </div>
      <div class="outer">
        <h3>新着商品</h3>
        <div class="box d-flex flex-row mt-1 mb-1">
          <% @items.each do |item| %>
            <div class="item-box pr-2 pt-1" style="width: 300px; heading: 250px">
              <%= link_to(item, class:"item") do %>
                <%= image_tag item.image, class: "rounded-circle shadow border border-brown", size: '200x150'%>
              <% end %>
              <p class="mt-3 mb-0" > <%= item.name %></p>
              <p>￥<%= item.price %>(税抜)</p>
            </div>
          <% end %>
        </div>
      </div>
      <div class="d-flex flex-row-reverse mb-4 mr-5">
        <strong><%= link_to "→全ての商品を見る", items_path , class: "mr-5 underline"%></strong>
      </div>
    </div>
  </div>
</div>