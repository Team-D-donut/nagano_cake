<div class= "container">
  <div class='row'>
    <div class="col-1"></div>
    <div class="col-8 mt-4">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class='d-flex flex-wrap' style="width: 800px;">
        <% @items.each do |item| %>
          <div class="list-box m-2">
            <%= link_to(item, class:"item") do %>
              <%= image_tag item.image, size:"180x140", class: "object-cover p-2" %>
            <% end %>
            <div class= "list-comment">
              <%= link_to item.name, item_path(item.id), class:"item-text" %></br>
              <p>¥<%= item.price %></p>
              <!--% if item.is_active == true %-->
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mx-auto">
    <%= paginate @items %>
  </div>
</div>