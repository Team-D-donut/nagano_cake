<div class="container">
  <div class="row">
    <div class="col">
      <h2>ジャンル編集</h2>
    </div>
  </div>

  <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @genre, url:admin_genre_path do |f| %>
  <div class="row">
    <div class="col">
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>