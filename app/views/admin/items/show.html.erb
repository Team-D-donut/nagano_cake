<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 offset-lg-1">
      <h2>商品詳細</h2>
    </div>
  </div>
  <div class="row mt-5 offset-lg-1">
    <div class="col-md-3">
      <%= image_tag @item.image, size: "300x200", class:"object-cover" %>
    </div>

    <div class="col-lg-5 offset-lg-2">
      <table class="table table-borderless mt-2">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td class="text-nowrap" >税込価格</br>（税抜価格）</td>
          <td><%= (@item.price*1.08).floor %>(<%= @item.price %>) 円</td>
        </tr>
        <tr>
          <td class="text-nowrap" >販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>

      <div class="row">
        <div class="col mx-auto">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-green" %>
        </div>
      </div>

    </div>
  </div>
</div>