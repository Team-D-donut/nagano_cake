<div class="container">

  <div class="row mt-3">
    <div class="col-lg-10">
      <h2>商品一覧</h2>
    </div>
    <div>
      <%= link_to new_admin_item_path, class: "col-lg-1 offset-lg-8" do %>
        <h3><i class="fas fa-plus-circle"></i></h3>
    <% end %>
    </div>
  </div>

  <table class="table table-borderless mt-2">
    <thead class="table-secondary">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
            <div class="text-success">販売中</div>
          <% else %>
            <div class="text-secondary">販売停止中</div>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>