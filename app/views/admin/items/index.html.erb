<div class="container">

  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
    </div>
    <div class="col">
      <%= link_to "+", new_admin_item_path %>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>